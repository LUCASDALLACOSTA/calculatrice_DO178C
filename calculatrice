def addition(a, b):
    return a + b

def soustraction(a, b):
    return a - b

def multiplication(a, b):
    return a * b

def division(a, b):
    if b != 0:
        return a / b
    else:
        return "Division par zéro"

def calculatrice():
    print("Bienvenue dans la calculatrice !")
    print("1. Addition")
    print("2. Soustraction")
    print("3. Multiplication")
    print("4. Division")

    choix = input("Choisissez l'opération (1/2/3/4): ")

    while choix not in ['1', '2', '3', '4']:
        print("Choix non disponible")
        choix = input("Choisissez l'opération (1/2/3/4): ")

    # Saisie de a et b
    a = input("Entrez le premier nombre: ")
    while not (all(char.isdigit() or char in ['.', ','] for char in a)):
        print("Veuillez entrer un nombre.")
        a = input("Entrez le premier nombre: ")

    b = input("Entrez le deuxième nombre: ")
    while not (all(char.isdigit() or char in ['.', ','] for char in b)):
        print("Veuillez entrer un nombre.")
        b = input("Entrez le deuxième nombre: ")

    # Remplacer les virgules par des points pour permettre la conversion en float
    a = a.replace(',', '.')
    b = b.replace(',', '.')

    # Convertir a et b en float
    a = float(a)
    b = float(b)

    if choix == '1':
        print("Résultat:", addition(a, b))
    elif choix == '2':
        print("Résultat:", soustraction(a, b))
    elif choix == '3':
        print("Résultat:", multiplication(a, b))
    elif choix == '4':
        print("Résultat:", division(a, b))

# Appel de la fonction principale pour utiliser la calculatrice
calculatrice()



